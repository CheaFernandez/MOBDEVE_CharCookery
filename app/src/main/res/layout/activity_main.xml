<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:src="@drawable/charcookery_logo"
        android:paddingTop="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingEnd="16dp"
            android:paddingBottom="80dp">

            <com.mobdeve.s17.charcookery.components.RecipeCollectionPreview
                android:id="@+id/collectionMyRecipes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp" />

            <com.mobdeve.s17.charcookery.components.RecipeCollectionPreview
                android:id="@+id/collectionCustom1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp" />

            <com.mobdeve.s17.charcookery.components.RecipeCollectionPreview
                android:id="@+id/collectionCustom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp" />

            <com.mobdeve.s17.charcookery.components.RecipeCollectionPreview
                android:id="@+id/collectionCustom3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp" />

            <TextView
                android:id="@+id/categorySectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Categories"
                android:textFontWeight="700"
                android:textSize="18sp"
                tools:targetApi="p" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="5"
                tools:listitem="@layout/card_category">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="gotoAddCategoryView">
                <!--       TODO: Make gotoAddCategoryView function in "MainActivity" using intents      -->

                <androidx.cardview.widget.CardView
                    android:id="@+id/addCategoryCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/addCategoryLayout"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/border_black"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:id="@+id/addCategoryTitle"
                            android:layout_width="318dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Add Category"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/addCategoryClickIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:importantForAccessibility="no"
                            android:src=""
                            app:srcCompat="@android:drawable/ic_menu_add" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.mobdeve.s17.charcookery.components.MenuBar
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:activePage="home" />

</LinearLayout>